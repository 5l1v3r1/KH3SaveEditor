<UserControl x:Class="KHSave.SaveEditor.Ff7Remake.Views.ChapterEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KHSave.SaveEditor.Ff7Remake.Views"
             xmlns:common="clr-namespace:KHSave.SaveEditor.Common.Controls;assembly=KHSave.SaveEditor.Common"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="300">
    <StackPanel>
        <TextBlock
            Visibility="{Binding ChapterDisabledVisibility}"
            Text="This chapter does not contain any data"/>
        <StackPanel Visibility="{Binding ChapterVisibility}">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                <CheckBox Content="Enabled" IsChecked="{Binding IsChapterInPlay}" Margin="0 0 10 0"/>
                
                <TextBlock Text="Chapter "/>
                <TextBox Text="{Binding ChapterId, UpdateSourceTrigger=PropertyChanged}" Width="60" Margin="0 0 10 0"/>

                <TextBlock Text="BGM "/>
                <TextBox Text="{Binding Bgm, UpdateSourceTrigger=PropertyChanged}" Width="60" Margin="0 0 10 0"/>
            </StackPanel>

            <TextBlock Text="Party modifier"/>
            <Grid Margin="0 0 0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Cloud"/>
                <ComboBox Grid.Row="1" Grid.Column="0"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember0}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Barret"/>
                <ComboBox Grid.Row="1" Grid.Column="2"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember1}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Text="Tifa"/>
                <ComboBox Grid.Row="1" Grid.Column="4"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember2}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="0" Grid.Column="6" Text="Aerith"/>
                <ComboBox Grid.Row="1" Grid.Column="6"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember3}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Red XIII"/>
                <ComboBox Grid.Row="4" Grid.Column="0"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember4}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="Unused"/>
                <ComboBox Grid.Row="4" Grid.Column="2"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember5}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="3" Grid.Column="4" Text="Unused"/>
                <ComboBox Grid.Row="4" Grid.Column="4"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember6}" SelectedValuePath="Value"/>
                <TextBlock Grid.Row="3" Grid.Column="6" Text="Unused"/>
                <ComboBox Grid.Row="4" Grid.Column="6"
                    ItemsSource="{Binding CharacterStatusTypes}" SelectedValue="{Binding PartyMember7}" SelectedValuePath="Value"/>
            </Grid>

            <StackPanel Margin="0 0 0 5">
                <TextBlock Text="Character position modifier"/>
                <local:PositionView DataContext="{Binding Entity0}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity1}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity2}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity3}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity4}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity5}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity6}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity7}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity8}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity9}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity10}" Margin="0 0 0 5"/>
                <local:PositionView DataContext="{Binding Entity11}" Margin="0 0 0 5"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
